<table class="table table-striped">
  <thead>
    <tr>
      <th>Event</th>
      <th>Friend</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.event.name %></td>
        <td><%= invite.friend.name %></td>
        <td><%= invite_status[invite.status].first %></td>

        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
