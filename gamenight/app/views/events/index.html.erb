<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>My Events</h1>

<table class="table table-striped">
   <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><strong><%= link_to event.name, event %></strong></td>
        <td><%= event.date.strftime('%B %-d at %-I:%M %p') %></td>
        <td><%= truncate(event.location) %></td>
        <td><%= truncate(event.description) %></td>
   
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Event', new_event_path %>
</div>